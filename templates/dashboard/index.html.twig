{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="page-header">
    <h1 class="page-title">Tableau de bord</h1>
    <p class="page-subtitle">Vue d'ensemble de votre activité en temps réel</p>
</div>

<div class="row g-4 mb-4">
    <div class="col-lg-3 col-md-6">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-car-front"></i>
            </div>
            <div class="stat-value">{{ totalVehicles }}</div>
            <div class="stat-label">Véhicules au total</div>
            <div style="margin-top: 16px; padding-top: 16px; border-top: 1px solid var(--gray-200);">
                <small style="color: var(--gray-500); font-size: 12px;">
                    <i class="bi bi-check-circle text-success"></i> {{ availableVehicles }} disponibles
                </small>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(16, 185, 129, 0.15)); color: var(--success);">
                <i class="bi bi-check-circle"></i>
            </div>
            <div class="stat-value">{{ availableVehicles }}</div>
            <div class="stat-label">Véhicules disponibles</div>
            <div style="margin-top: 16px; padding-top: 16px; border-top: 1px solid var(--gray-200);">
                <small style="color: var(--gray-500); font-size: 12px;">
                    Prêts à la location
                </small>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(245, 158, 11, 0.15)); color: var(--warning);">
                <i class="bi bi-calendar-check"></i>
            </div>
            <div class="stat-value">{{ activeRentals }}</div>
            <div class="stat-label">Locations en cours</div>
            <div style="margin-top: 16px; padding-top: 16px; border-top: 1px solid var(--gray-200);">
                <small style="color: var(--gray-500); font-size: 12px;">
                    Actuellement actives
                </small>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(6, 182, 212, 0.15)); color: var(--info);">
                <i class="bi bi-people"></i>
            </div>
            <div class="stat-value">{{ totalClients }}</div>
            <div class="stat-label">Clients enregistrés</div>
            <div style="margin-top: 16px; padding-top: 16px; border-top: 1px solid var(--gray-200);">
                <small style="color: var(--gray-500); font-size: 12px;">
                    Base de données
                </small>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="premium-card">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h3 style="font-weight: 700; font-size: 20px; color: var(--gray-900); margin-bottom: 4px;">Actions rapides</h3>
                    <p style="color: var(--gray-500); font-size: 14px; margin: 0;">Accès direct aux fonctionnalités principales</p>
                </div>
            </div>
            <div class="row g-3">
                <div class="col-md-4">
                    <a href="{{ path('app_vehicle_new') }}" class="btn-premium btn-premium-success w-100" style="flex-direction: column; padding: 24px; text-align: center;">
                        <i class="bi bi-plus-circle" style="font-size: 32px; margin-bottom: 8px;"></i>
                        <span>Ajouter un véhicule</span>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="{{ path('app_client_new') }}" class="btn-premium btn-premium-primary w-100" style="flex-direction: column; padding: 24px; text-align: center;">
                        <i class="bi bi-person-plus" style="font-size: 32px; margin-bottom: 8px;"></i>
                        <span>Ajouter un client</span>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="{{ path('app_rental_new') }}" class="btn-premium btn-premium-primary w-100" style="flex-direction: column; padding: 24px; text-align: center;">
                        <i class="bi bi-calendar-plus" style="font-size: 32px; margin-bottom: 8px;"></i>
                        <span>Créer une location</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="premium-card">
            <h3 style="font-weight: 700; font-size: 20px; color: var(--gray-900); margin-bottom: 24px;">Statistiques</h3>
            <div class="d-flex flex-column gap-3">
                <div class="d-flex justify-content-between align-items-center p-3" style="background: var(--gray-50); border-radius: var(--radius-lg);">
                    <div>
                        <div style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">Véhicules loués</div>
                        <div style="font-size: 24px; font-weight: 800; color: var(--gray-900); margin-top: 4px;">{{ rentedVehicles }}</div>
                    </div>
                    <div style="width: 48px; height: 48px; background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(245, 158, 11, 0.15)); border-radius: var(--radius-lg); display: flex; align-items: center; justify-content: center; color: var(--warning); font-size: 24px;">
                        <i class="bi bi-car-front-fill"></i>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center p-3" style="background: var(--gray-50); border-radius: var(--radius-lg);">
                    <div>
                        <div style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">Total locations</div>
                        <div style="font-size: 24px; font-weight: 800; color: var(--gray-900); margin-top: 4px;">{{ totalRentals }}</div>
                    </div>
                    <div style="width: 48px; height: 48px; background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.15)); border-radius: var(--radius-lg); display: flex; align-items: center; justify-content: center; color: var(--primary); font-size: 24px;">
                        <i class="bi bi-calendar-check-fill"></i>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center p-3" style="background: linear-gradient(135deg, rgba(99, 102, 241, 0.05), rgba(139, 92, 246, 0.05)); border-radius: var(--radius-lg); border: 2px solid rgba(99, 102, 241, 0.2);">
                    <div>
                        <div style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">Taux d'occupation</div>
                        <div style="font-size: 24px; font-weight: 800; color: var(--primary); margin-top: 4px;">
                            {% if totalVehicles > 0 %}
                                {{ ((rentedVehicles / totalVehicles) * 100)|round(1) }}%
                            {% else %}
                                0%
                            {% endif %}
                        </div>
                    </div>
                    <div style="width: 48px; height: 48px; background: linear-gradient(135deg, var(--primary), var(--secondary)); border-radius: var(--radius-lg); display: flex; align-items: center; justify-content: center; color: white; font-size: 24px;">
                        <i class="bi bi-graph-up"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
