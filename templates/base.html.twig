    <script>
        // Create car-themed animated background
        function createCarTheme() {
            const bgAnimated = document.getElementById('bgAnimated');
            
            // Create road grid
            const roadGrid = document.createElement('div');
            roadGrid.className = 'road-grid';
            bgAnimated.appendChild(roadGrid);
            
            // Create speed lines
            const speedLines = document.createElement('div');
            speedLines.className = 'speed-lines';
            bgAnimated.appendChild(speedLines);
            
            // Create center lines
            const centerLines = document.createElement('div');
            centerLines.className = 'center-lines';
            bgAnimated.appendChild(centerLines);
            
            // Create headlight beams
            const headlightLeft = document.createElement('div');
            headlightLeft.className = 'headlight-beam left';
            bgAnimated.appendChild(headlightLeft);
            
            const headlightRight = document.createElement('div');
            headlightRight.className = 'headlight-beam right';
            bgAnimated.appendChild(headlightRight);
            
            // Create car particles
            const carCount = 8;
            for (let i = 0; i < carCount; i++) {
                const car = document.createElement('div');
                car.className = 'car-particle';
                car.style.left = Math.random() * 100 + '%';
                car.style.animationDelay = (Math.random() * 15) + 's';
                car.style.animationDuration = (Math.random() * 10 + 12) + 's';
                bgAnimated.appendChild(car);
            }
            
            // Create glowing orbs (street lights)
            for (let i = 0; i < 3; i++) {
                const orb = document.createElement('div');
                orb.className = 'glow-orb';
                bgAnimated.appendChild(orb);
            }
        }

        // Initialize car theme on load
        createCarTheme();

        // Mobile sidebar toggle
        if (window.innerWidth <= 1024) {
            const sidebar = document.getElementById('sidebar');
            document.addEventListener('click', (e) => {
                if (!sidebar.contains(e.target) && !e.target.closest('.sidebar-toggle')) {
                    sidebar.classList.remove('open');
                }
            });
        }

        // Smooth scroll animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.premium-card, .stat-card').forEach(el => {
            observer.observe(el);
        });

        // Loading overlay for form submissions
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', () => {
                document.getElementById('loadingOverlay').classList.add('active');
            });
        });

        // Remove loading overlay after page load
        window.addEventListener('load', () => {
            setTimeout(() => {
                document.getElementById('loadingOverlay').classList.remove('active');
            }, 500);
        });
    </script>
