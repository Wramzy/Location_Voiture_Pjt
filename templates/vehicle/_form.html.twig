{% set cancel_path = cancel_path|default(null) %}

{{ form_start(form, {'attr': {'class': 'premium-card'}}) }}
    <div class="row g-4">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.marque, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.marque, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Peugeot'}}) }}
                {{ form_errors(form.marque) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.modele, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.modele, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 308'}}) }}
                {{ form_errors(form.modele) }}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.annee, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.annee, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 2023'}}) }}
                {{ form_errors(form.annee) }}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.immatriculation, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.immatriculation, {'attr': {'class': 'form-control', 'style': 'font-family: monospace;', 'placeholder': 'AB-123-CD'}}) }}
                {{ form_errors(form.immatriculation) }}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.statut, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.statut) }}
            </div>
        </div>
    </div>
    <div class="d-flex gap-3 mt-4 pt-4" style="border-top: 2px solid var(--gray-200);">
        <button class="btn-premium btn-premium-primary" type="submit">
            <i class="bi bi-check-circle"></i>
            {{ button_label|default('Enregistrer') }}
        </button>
        {% if cancel_path %}
            <a href="{{ cancel_path }}" class="btn-premium btn-premium-secondary">Annuler</a>
        {% endif %}
    </div>
{{ form_end(form) }}
