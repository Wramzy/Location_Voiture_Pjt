{% extends 'base.html.twig' %}

{% block title %}Détails du véhicule{% endblock %}

{% block body %}
<div class="page-header">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h1 class="page-title">Détails du véhicule</h1>
            <p class="page-subtitle">Informations complètes du véhicule</p>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}" class="btn-premium btn-premium-primary">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            <a href="{{ path('app_vehicle_index') }}" class="btn-premium btn-premium-secondary">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="premium-card">
            <h3 style="font-weight: 700; font-size: 20px; color: var(--gray-900); margin-bottom: 24px; display: flex; align-items: center; gap: 12px;">
                <div style="width: 48px; height: 48px; background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1)); border-radius: var(--radius-lg); display: flex; align-items: center; justify-content: center; color: var(--primary); font-size: 24px;">
                    <i class="bi bi-car-front"></i>
                </div>
                Informations générales
            </h3>
            <div class="row g-4">
                <div class="col-md-6">
                    <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                        <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">ID</label>
                        <div style="font-size: 20px; font-weight: 800; color: var(--gray-900);">#{{ vehicle.id }}</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                        <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">Statut</label>
                        <div>
                            {% if vehicle.statut == 'disponible' %}
                                <span class="badge-premium badge-success">
                                    <i class="bi bi-check-circle"></i> Disponible
                                </span>
                            {% elseif vehicle.statut == 'loué' %}
                                <span class="badge-premium badge-warning">
                                    <i class="bi bi-calendar-check"></i> Loué
                                </span>
                            {% else %}
                                <span class="badge-premium badge-danger">
                                    <i class="bi bi-tools"></i> Maintenance
                                </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                        <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">Marque</label>
                        <div style="font-size: 18px; font-weight: 700; color: var(--gray-900);">{{ vehicle.marque }}</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                        <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">Modèle</label>
                        <div style="font-size: 18px; font-weight: 700; color: var(--gray-900);">{{ vehicle.modele }}</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                        <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">Année</label>
                        <div style="font-size: 18px; font-weight: 700; color: var(--gray-900);">{{ vehicle.annee }}</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                        <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">Immatriculation</label>
                        <div style="font-size: 18px; font-family: 'Courier New', monospace; font-weight: 700; color: var(--gray-900);">{{ vehicle.immatriculation }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
