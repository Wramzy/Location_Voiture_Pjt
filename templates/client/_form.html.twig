{% set cancel_path = cancel_path|default(null) %}

{{ form_start(form, {'attr': {'class': 'premium-card'}}) }}
    <div class="row g-4">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Dupont'}}) }}
                {{ form_errors(form.nom) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.prenom, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Jean'}}) }}
                {{ form_errors(form.prenom) }}
            </div>
        </div>
        <div class="col-md-8">
            <div class="form-group">
                {{ form_label(form.adresse, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 123 Rue de la Paix, 75001 Paris'}}) }}
                {{ form_errors(form.adresse) }}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.telephone, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'style': 'font-family: monospace;', 'placeholder': '06 12 34 56 78'}}) }}
                {{ form_errors(form.telephone) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.numeroPermis, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.numeroPermis, {'attr': {'class': 'form-control', 'style': 'font-family: monospace;', 'placeholder': 'Ex: 123456789012345'}}) }}
                {{ form_errors(form.numeroPermis) }}
            </div>
        </div>
    </div>
    <div class="d-flex gap-3 mt-4 pt-4" style="border-top: 2px solid var(--gray-200);">
        <button class="btn-premium btn-premium-primary" type="submit">
            <i class="bi bi-check-circle"></i>
            {{ button_label|default('Enregistrer') }}
        </button>
        {% if cancel_path %}
            <a href="{{ cancel_path }}" class="btn-premium btn-premium-secondary">Annuler</a>
        {% endif %}
    </div>
{{ form_end(form) }}
