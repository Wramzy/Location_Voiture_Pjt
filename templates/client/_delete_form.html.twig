<form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce client ? Cette action est irréversible.');" style="display: inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
    <button class="btn-premium btn-premium-danger btn-sm" type="submit">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>
