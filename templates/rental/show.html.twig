{% extends 'base.html.twig' %}

{% block title %}Détails de la location{% endblock %}

{% block body %}
<div class="page-header">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h1 class="page-title">Détails de la location</h1>
            <p class="page-subtitle">Informations complètes de la location</p>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('app_rental_edit', {'id': rental.id}) }}" class="btn-premium btn-premium-primary">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            <a href="{{ path('app_rental_index') }}" class="btn-premium btn-premium-secondary">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-6">
        <div class="premium-card">
            <h3 style="font-weight: 700; font-size: 20px; color: var(--gray-900); margin-bottom: 24px; display: flex; align-items: center; gap: 12px;">
                <div style="width: 48px; height: 48px; background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1)); border-radius: var(--radius-lg); display: flex; align-items: center; justify-content: center; color: var(--primary); font-size: 24px;">
                    <i class="bi bi-calendar-check"></i>
                </div>
                Informations générales
            </h3>
            <div class="d-flex flex-column gap-3">
                <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                    <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">ID</label>
                    <div style="font-size: 20px; font-weight: 800; color: var(--gray-900);">#{{ rental.id }}</div>
                </div>
                <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                    <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">Statut</label>
                    <div>
                        {% if rental.statut == 'en cours' %}
                            <span class="badge-premium badge-warning">
                                <i class="bi bi-clock"></i> En cours
                            </span>
                        {% else %}
                            <span class="badge-premium badge-success">
                                <i class="bi bi-check-circle"></i> Terminée
                            </span>
                        {% endif %}
                    </div>
                </div>
                <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                    <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">Date de début</label>
                    <div style="font-size: 18px; font-weight: 700; color: var(--gray-900);">{{ rental.dateDebut|date('d/m/Y à H:i') }}</div>
                </div>
                <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                    <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">Date de fin</label>
                    <div style="font-size: 18px; font-weight: 700; color: var(--gray-900);">{{ rental.dateFin|date('d/m/Y à H:i') }}</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="premium-card">
            <h3 style="font-weight: 700; font-size: 20px; color: var(--gray-900); margin-bottom: 24px; display: flex; align-items: center; gap: 12px;">
                <div style="width: 48px; height: 48px; background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(16, 185, 129, 0.15)); border-radius: var(--radius-lg); display: flex; align-items: center; justify-content: center; color: var(--success); font-size: 24px;">
                    <i class="bi bi-person"></i>
                </div>
                Client
            </h3>
            <div class="d-flex flex-column gap-3">
                <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                    <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">Nom complet</label>
                    <div style="font-size: 18px; font-weight: 700; color: var(--gray-900);">{{ rental.client.prenom }} {{ rental.client.nom }}</div>
                </div>
                <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                    <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">Téléphone</label>
                    <div style="font-size: 16px; font-family: 'Courier New', monospace; font-weight: 600; color: var(--gray-900);">{{ rental.client.telephone }}</div>
                </div>
                <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                    <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">Adresse</label>
                    <div style="font-size: 14px; color: var(--gray-700);">{{ rental.client.adresse }}</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="premium-card">
            <h3 style="font-weight: 700; font-size: 20px; color: var(--gray-900); margin-bottom: 24px; display: flex; align-items: center; gap: 12px;">
                <div style="width: 48px; height: 48px; background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), rgba(245, 158, 11, 0.15)); border-radius: var(--radius-lg); display: flex; align-items: center; justify-content: center; color: var(--warning); font-size: 24px;">
                    <i class="bi bi-car-front"></i>
                </div>
                Véhicule
            </h3>
            <div class="row g-4">
                <div class="col-md-3">
                    <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                        <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">Marque / Modèle</label>
                        <div style="font-size: 18px; font-weight: 700; color: var(--gray-900);">{{ rental.vehicle.marque }} {{ rental.vehicle.modele }}</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                        <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">Année</label>
                        <div style="font-size: 18px; font-weight: 700; color: var(--gray-900);">{{ rental.vehicle.annee }}</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                        <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">Immatriculation</label>
                        <div style="font-size: 16px; font-family: 'Courier New', monospace; font-weight: 700; color: var(--gray-900);">{{ rental.vehicle.immatriculation }}</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div style="padding: 20px; background: var(--gray-50); border-radius: var(--radius-lg);">
                        <label style="font-size: 12px; color: var(--gray-500); font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px; display: block;">Statut</label>
                        <div>
                            {% if rental.vehicle.statut == 'disponible' %}
                                <span class="badge-premium badge-success">
                                    <i class="bi bi-check-circle"></i> Disponible
                                </span>
                            {% elseif rental.vehicle.statut == 'loué' %}
                                <span class="badge-premium badge-warning">
                                    <i class="bi bi-calendar-check"></i> Loué
                                </span>
                            {% else %}
                                <span class="badge-premium badge-danger">
                                    <i class="bi bi-tools"></i> Maintenance
                                </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
