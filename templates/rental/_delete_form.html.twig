<form method="post" action="{{ path('app_rental_delete', {'id': rental.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette location ? Cette action est irréversible.');" style="display: inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rental.id) }}">
    <button class="btn-premium btn-premium-danger btn-sm" type="submit">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>
