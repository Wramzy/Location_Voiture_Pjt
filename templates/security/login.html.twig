{% extends 'base.html.twig' %}

{% block title %}Connexion - Locauto{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo">
                <div class="auth-logo-icon">
                    <i class="bi bi-speedometer2"></i>
                </div>
                <h1 class="auth-title">Locauto</h1>
            </div>
            <p class="auth-subtitle">Connectez-vous à votre compte</p>
        </div>

        {% if error %}
            <div class="alert-premium alert-danger">
                <i class="bi bi-exclamation-triangle"></i>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="alert-premium alert-success">
                <i class="bi bi-check-circle"></i>
                Vous êtes connecté en tant que <strong>{{ app.user.email }}</strong>
                <a href="{{ path('app_logout') }}" class="ms-2">Déconnexion</a>
            </div>
        {% endif %}

        <form method="post" class="auth-form">
            <div class="form-group">
                <label for="username" class="form-label">
                    <i class="bi bi-envelope"></i> Email
                </label>
                <input 
                    type="email" 
                    value="{{ last_username }}" 
                    name="_username" 
                    id="username" 
                    class="form-control" 
                    autocomplete="email" 
                    required 
                    autofocus
                    placeholder="votre@email.com"
                >
            </div>

            <div class="form-group">
                <label for="password" class="form-label">
                    <i class="bi bi-lock"></i> Mot de passe
                </label>
                <input 
                    type="password" 
                    name="_password" 
                    id="password" 
                    class="form-control" 
                    autocomplete="current-password" 
                    required
                    placeholder="Votre mot de passe"
                >
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn-premium btn-premium-primary w-100">
                <i class="bi bi-box-arrow-in-right"></i>
                Se connecter
            </button>
        </form>
    </div>
</div>

<style>
    .auth-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: calc(100vh - 200px);
        padding: 40px 20px;
    }

    .auth-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(30px) saturate(200%);
        border-radius: var(--radius-2xl);
        border: 1px solid rgba(14, 165, 233, 0.3);
        box-shadow: var(--shadow-2xl), 0 0 40px rgba(14, 165, 233, 0.3);
        padding: 48px;
        width: 100%;
        max-width: 480px;
        animation: cardEntrance 0.6s ease;
        position: relative;
        overflow: hidden;
    }

    .auth-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(14, 165, 233, 0.1), transparent);
        transition: left 0.6s;
    }

    .auth-card:hover::before {
        left: 100%;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 32px;
    }

    .auth-logo {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 16px;
        margin-bottom: 16px;
    }

    .auth-logo-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border-radius: var(--radius-xl);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 40px;
        box-shadow: var(--shadow-primary), var(--shadow-gold), 0 0 30px rgba(14, 165, 233, 0.5);
        animation: pulse 2s ease-in-out infinite;
    }

    .auth-title {
        font-size: 36px;
        font-weight: 900;
        letter-spacing: -1px;
        background: linear-gradient(135deg, var(--primary), var(--secondary), var(--accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
    }

    .auth-subtitle {
        font-size: 16px;
        color: var(--gray-600);
        margin: 0;
    }

    .auth-form {
        margin-top: 32px;
    }

    .auth-footer {
        margin-top: 24px;
        padding-top: 24px;
        border-top: 1px solid var(--gray-200);
    }

    .auth-link {
        color: var(--primary);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .auth-link:hover {
        color: var(--secondary);
        text-decoration: underline;
    }

    .form-label {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-label i {
        color: var(--primary);
    }
</style>
{% endblock %}
